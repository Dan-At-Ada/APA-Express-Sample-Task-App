doctype html
html
    head
        title= title
    body
        h1 User List
        ul
            each user in users
                li
                    a(href=`/users/${user.id}`) #{user.name}
        form(action="/users" method="post")
            input(type="text" name="name" placeholder="Name")
            input(type="email" name="email" placeholder="Email")
            button(type="submit") Add User




